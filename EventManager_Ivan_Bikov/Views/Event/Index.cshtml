@model List<EventManager_Ivan_Bikov.Entities.Event>

<a href="/Event/Create" class="btn btn-info" style="margin-top:20px; margin-bottom:5px;">Create Event</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Event in Model)
        {
            <tr>
                <td>@Event.Name</td>
                <td>@Event.Location</td>
                <td>@Event.StartDate.ToString("dd/MM/yyyy hh:mm")</td>
                <td>@Event.EndDate.ToString("dd/MM/yyyy hh:mm")</td>
                <td>
                    <a href="/Event/Update/@Event.Id" class="btn btn-success">Edit</a>
                    <a href="/Event/Delete/@Event.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
